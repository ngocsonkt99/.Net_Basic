@model IEnumerable<Model.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    //chay thm lại thử đi
    <div class="col-lg-4" style="border: 1px solid aqua">

        @item.Ten<br />
        <img src="~/Image/sach1.jpg" style="width:100px;height:100px" /><br />
        @item.Gia<br />
        @item.Loai<br />
       @Html.ActionLink("XemChitiet", "Details", new { id = item.Id }) 
    </div>


}

 
